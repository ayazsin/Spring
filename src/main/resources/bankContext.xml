<?xml version="1.0" encoding="UTF-8"?>
<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:p="http://www.springframework.org/schema/p"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    <bean id="loanbean" class="bank.BankLoan">
        <constructor-arg name="amount" value="100000"></constructor-arg>
        <constructor-arg name="monthsNb" value="120"></constructor-arg>
        <constructor-arg name="rate" value="0.02"></constructor-arg>

    </bean>
    <bean id="loanbean2" class="bank.BankLoan">
        <constructor-arg name="amount" value="400000"></constructor-arg>
        <constructor-arg name="monthsNb" value="240"></constructor-arg>
        <constructor-arg name="rate" value="0.04"></constructor-arg>

    </bean>
</beans>