<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="sportCar1" class="heritage.SportCar">
        <property name="color" value="red"></property>
        <property name="brand" value="AstonMartin"></property>
    </bean>

    <bean id="sportCar2" class="heritage.SportCar">
        <property name="color" value="green"></property>
        <property name="brand" value="AstonMartin"></property>
    </bean>
    
    <bean id="prestigeCar" class="heritage.PrestigeCar" parent="sportCar1">
        <property name="year" value="2000"></property>
    </bean>



</beans>