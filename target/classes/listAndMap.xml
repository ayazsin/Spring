<?xml version="1.0" encoding="UTF-8"?>
<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:p="http://www.springframework.org/schema/p"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    <bean id="list1" class="listAndMap.ManageList">
        <constructor-arg name="name" value="Color cards are?"></constructor-arg>
        <constructor-arg name="answers">
            <list>
                <value>Diamond</value>
                <value>Club</value>
                <value>Spade</value>
                <value>Heart</value>
            </list>
        </constructor-arg>
    </bean>
    <bean id="directory1" class="listAndMap.Directory">
        <constructor-arg name="name" value="Best Movies By Director?"></constructor-arg>
        <constructor-arg name="hMap">
            <map>
                <entry key="Godard" value="Pierrot Le Fou"></entry>
                <entry key="Truffaut" value="La Sirene du Mississipi"></entry>
            </map>
        </constructor-arg>
    </bean>

</beans>